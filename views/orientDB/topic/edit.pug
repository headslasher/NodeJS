extends ../layout
block content
    article
      - rid = encodeURIComponent(topic['@rid'])
      form(action='/topic/'+rid+'/edit' method='post')
        p
          input(type='text' name='title' placeholder='title' value=topic.title)
        p
          textarea(name='description')=topic.description
        p
          input(type='author' name='author' placeholder='author' value=topic.author)
        p
          input(type='submit')
